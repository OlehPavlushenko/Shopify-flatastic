<div class="container">
	<h1 class="page_heading">{{ page_title }}</h1>
	<div class="page_content grid">
		{% if page.content.size > 0 %}
			<div class="grid__item large--one-whole rte">
				{{ page.content }}
			</div>
		{% endif %}

		<div class="grid__item large--one-half left_content">
			{% for block in section.blocks %}
				{% assign residue = forloop.index | modulo:2 %}
				{% if residue > 0 %}
					<div class="tab_item">
						{% if block.settings.block_title.size > 0 %}
							<h2 class="tab_title"><span class="menu_trigger">{{ block.settings.block_title }}</h2>
						{% endif %}
						
						<div class="tab_content tab_content_wrapper">
							{% for i in (1..6) %}
								{% capture header %}element_{{ i }}_header{% endcapture %}
								{% capture text %}element_{{ i }}_text{% endcapture %}
								
								{% if block.settings[header].size > 0 %}
									<div class="tab_element">
										<h4 class="element_title tab_nav" data-tab="{{ i | minus: 1 }}"><i class="fa fa-plus-circle" aria-hidden="true"></i><i class="fa fa-minus-circle" aria-hidden="true"></i>{{ block.settings[header] }}</h4>
										<div class="element_text tab_item">{{ block.settings[text] }}</div>
									</div>
								{% endif %}
							{% endfor %}
						</div>
					</div>
				{% endif %}
			{% endfor %}
		</div>

		<div class="grid__item large--one-half right_content">
			{% for block in section.blocks %}
				{% assign residue = forloop.index | modulo:2 %}
				{% if residue == 0 %}
					<div class="tab_item">
						{% if block.settings.block_title.size > 0 %}
							<h2 class="tab_title">{{ block.settings.block_title }}</h2>
						{% endif %}
						
						<div class="tab_content tab_content_wrapper">
							{% for i in (1..6) %}
								{% capture header %}element_{{ i }}_header{% endcapture %}
								{% capture text %}element_{{ i }}_text{% endcapture %}
								
								{% if block.settings[header].size > 0 %}
									<div class="tab_element">
										<h4 class="element_title tab_nav"  data-tab="{{ i | minus: 1 }}"><i class="fa fa-plus-circle" aria-hidden="true"></i><i class="fa fa-minus-circle" aria-hidden="true"></i>{{ block.settings[header] }}</h4>
										<div class="element_text tab_item">{{ block.settings[text] }}</div>
									</div>
								{% endif %}
							{% endfor %}
						</div>
					</div>
				{% endif %}
			{% endfor %}
		</div>
	</div>
</div>

