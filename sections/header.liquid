                <div class="aless-block">
                  <ul>
                    {% comment %}  HEADER search  {% endcomment %}
                    {% if section.settings.search_enable %}  
                   <li class="search-button">
                    
                   {% include 'search-bar', search_btn_style: 'btn' %}
                    <div id="search-toggle" class="toggle-search-modal">
                      <span class="icon-fallback-text">
                        <span class="icon icon-search" aria-hidden="true"></span>
                        <span class="fallback-text">{{ 'general.search.title' | t }}</span>
                      </span>
                    </div>
                  </li>
                  {% endif %}
