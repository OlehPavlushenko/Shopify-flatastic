{% assign hero_full_height = true %}
<div id="header" data-section-id="{{ section.id }}" data-section-type="header-section" data-template="{{ template.name }}">
  <div id="NavDrawer" class="drawer drawer--left">
    {% include 'drawer-menu' %}
  </div>
  <div class="header-container drawer__header-container">
    <div class="header-wrapper">
      {% comment %}  announcement  {% endcomment %}
      {% if section.settings.show_announcement %}
        {% if section.settings.home_page_only == false or template.name == 'index' %}
          <style>
            .box-announc {
              background-color: {{ section.settings.color_bg }};
            }
          </style>

          <div class="box-announc" {% if section.settings.background_toggle %} style="background-color: {{ section.settings.bg_color }}"{% endif %} {% if section.settings.background_image_toggle %} style="background-image: url( {{ section.settings.background_image | img_url: '2545x', crop: 'top' }} );"{% endif %}>
            <div class="wrapper">
             {% if section.settings.countdown_toggle %}
                <div class="timer">
                  <div id="timer_{{ forloop.index }}_{{ section.id }}" class="countdown_timer" data-date="{{ section.settings.countdown_date_year }}/{{ section.settings.countdown_date_month }}/{{ section.settings.countdown_date_day }}"></div>
                </div>
                <script>
                $(document ).ready(function() {
                  $('#timer_{{ forloop.index }}_{{ section.id }}').each(function() {
                    var $this = $(this), finalDate = $(this).data('date');
                    $this.countdown(finalDate, function(event) {
                      $this.html(event.strftime('<div class="deals-time day"><div class="num-time">%D</div><div class="title-time">{{ 'general.countdown.days' | t }}</div></div> <div class="deals-time hour"><div class="num-time">%H</div> <div class="title-time">{{ 'general.countdown.hours' | t }}</div></div><div class="deals-time minute"><div class="num-time">%M</div><div class="title-time">{{ 'general.countdown.minutes' | t }}</div></div><div class="deals-time second"><div class="num-time">%S</div><div class="title-time">{{ 'general.countdown.seconds' | t }}</div></div>'));
                    });
                  });  
                });
              </script>
              {% endif %}
              <div class="box-text">
                <div class="sale-1">
                  <span class="sale">{{ section.settings.sale2 }}</span>
                  <span>{{ section.settings.sale1 }}</span>
                </div>
                  <div class="item-text">
                    {% if section.settings.column_richtext %}
                    <div class="announcement-bar-message">{{ section.settings.column_richtext }}</div>
                    {% endif %}
                    {% if section.settings.text2 %}
                    <p class="announcement-bar-message2">{{ section.settings.text2 | escape }}</p>
                    {% endif %}
                  </div>

              </div>
              {% if section.settings.btn_link.size > 0 and section.settings.btn_txt.size > 0 %}
                <a class="btn count_btn" href="{{ section.settings.btn_link }}">{{ section.settings.btn_txt }}</a>
              {% endif %}
              
              
          </div>
        </div>
        {% endif %}
      {% endif %}

      <header class="site-header">
        {% comment %}  header-row-1  {% endcomment %}
        <div class="header-row-1 row_mobile">
          <div id="header-close">
            <div class="close_icon"></div>
          </div>
          <div class="wrapper">
            <div class="grid headers-main">
              <div class="top-item-contacts grid__item large--{{ section.settings.column-contact }}">
                  <div class="top-header-item-contacts">
                    {% if section.settings.contacts_address.size > 0 %}
                      <span class="contact-address"><i class="fa fa-map-pin" aria-hidden="true"></i>{{ section.settings.contacts_address }}</span>
                    {% endif %}

                    {% if section.settings.contacts_phone.size > 0 %}
                      <span class="contact-phone"><a href="tel:{{ section.settings.contacts_phone }}"><i class="fa fa-volume-control-phone" aria-hidden="true"></i>{{ section.settings.contacts_phone }}</a></span>
                    {% endif %}

                    {% if section.settings.contacts_email.size > 0 %}
                      <span class="contact-email"><a href="mailto:{{ section.settings.contacts_email }}"><i class="fa fa-envelope" aria-hidden="true"></i>{{ section.settings.contacts_email }}</a></span>
                    {% endif %}
                    {% if section.settings.contacts_time.size > 0 %}
                      <span class="contact-time"><i class="fa fa-calendar" aria-hidden="true"></i>{{ section.settings.contacts_time }}</span>
                    {% endif %}
                  </div>
                </div>
                <div class="top-item-social grid__item large--{{ section.settings.column-social }}">
                  <div class="top-header-item-social">
                    <ul class="style_1">
                      {% if section.settings.social_fb.size > 0 %}
                        <li class="fb"><a href="{{ section.settings.social_fb }}" title="facebook"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                      {% endif %}

                      {% if section.settings.social_tw.size > 0 %}
                        <li class="tw"><a href="{{ section.settings.social_tw }}" title="twitter"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                      {% endif %}

                      {% if section.settings.social_inst.size > 0 %}
                        <li class="inst"><a href="{{ section.settings.social_inst }}" title="instagram"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
                      {% endif %}

                      {% if section.settings.social_pin.size > 0 %}
                        <li class="pin"><a href="{{ section.settings.social_pin }}" title="pinterest"><i class="fa fa-pinterest" aria-hidden="true"></i></a></li>
                      {% endif %}

                      {% if section.settings.social_gplus.size > 0 %}
                        <li class="gplus"><a href="{{ section.settings.social_gplus }}" title="google-plus"><i class="fa fa-google-plus" aria-hidden="true"></i></a></li>
                      {% endif %}

                      {% if section.settings.social_yt.size > 0 %}
                        <li class="yt"><a href="{{ section.settings.social_yt }}" title="youtube"><i class="fa fa-youtube" aria-hidden="true"></i></a></li>
                      {% endif %}
                    </ul>
                  </div>
               </div>
               <div class="top-item-links grid__item large--{{ section.settings.column-link }}">
                <div class="top-header-item-links">
                 
                  {% comment %}  HEADER CURRENCY  {% endcomment %}
                  {% if section.settings.currency_selector %}
                   <label class="currency-picker__wrapper">
                    <select class="currency-picker" name="currencies" style="display: inline; width: auto; vertical-align: inherit;">
                    {% assign codes = 'USD,EUR,GBP,CAD,ARS,AUD,BBD,BDT,BSD,BHD,BRL,BOB,BND,BGN,ILS,MMK,KYD,CLP,CNY,COP,CRC,HRK,CZK,DKK,DOP,XCD,EGP,XPF,FJD,GHS,GTQ,GYD,GEL,HKD,HUF,ISK,INR,IDR,NIS,JMD,JPY,JOD,KZT,KES,KWD,LVL,LTL,MXN,MYR,MUR,MDL,MAD,MNT,MZN,ANG,NZD,NGN,NOK,OMR,PKR,PYG,PEN,PHP,PLN,QAR,RON,RUB,SAR,RSD,SCR,SGD,SYP,ZAR,KRW,LKR,SEK,CHF,TWD,THB,TZS,TTD,TRY,UAH,AED,UYU,VEB,VND,ZMK' | split: ',' %}
                    {% assign supported_codes = settings.supported_currencies | split: ' ' %}
                    <option value="{{ shop.currency }}" selected="selected">{{ shop.currency }}</option>
                    {% for code in supported_codes %}
                      {% if code != shop.currency and codes contains code %}
                      <option value="{{ code }}">{{ code }}</option>
                      {% endif %}
                    {% endfor %}
                    </select>
                  </label>
                  {% endif %}
                   <ul>
                    {%- assign linklist = section.settings.links -%}
                    {% assign top_col = canonical_url | replace: shop.url %}
                    {%- assign handles = link.url | replace: shop.url -%}
                    {% comment %}   HEADER ACCOUNT LINK   {% endcomment %}
                    {% if shop.customer_accounts_enabled %}                    
                        {% if customer %}
                        <li class="item {% if top_col == handles %}active{% endif %}">
                          <a href="/account/logout" title="{{ 'layout.customer.log_out' | t }}">{{ 'layout.customer.log_out' | t }}</a>
                        </li>
                        {% else %}
                        <li class="item {% if top_col == handles %}active{% endif %}">
                          <a href="/account" title="{{ 'layout.customer.log_in' | t }}">{{ 'layout.customer.log_in' | t }}</a>
                        </li>    
                        {% endif %}
                    {% endif %}
                    {% for link in linklists[linklist].links %}
                      <li class="item {% if top_col == handles %}active{% endif %}">
                        <a href="{{ link.url }}">{{ link.title }}</a>
                      </li>
                    {% endfor %}
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
        {% comment %}   header-row-2  {% endcomment %}
        <div class="header-row-2">
          <div class="wrapper">
              <div class="header-main">
                <div class="logo">
                  {% if template.name == 'index' %}
                    <h1 class="site-header__logo large--left" itemscope itemtype="http://schema.org/Organization">
                  {% else %}
                    <div class="h1 site-header__logo large--left" itemscope itemtype="http://schema.org/Organization">
                  {% endif %}
                  {% if section.settings.logo_slogan.size > 0 %}
                    {% assign logo_slogan = section.settings.logo_slogan %}
                  {% endif %}

                  {% case section.settings.logo_type %}
                    {% when 'txt' %}
                      <a class="header_logo" href="{{ shop.url }}">{{ shop.name }} <span class="logo_slogan">{{ logo_slogan }}</span></a>

                    {% when 'img' %}
                      {% if section.settings.logo_main.size > 0 %}
                        <a id="id-logo" class="header_logo" href="{{ shop.url }}">
                          <img src="{{ section.settings.logo_main | img_url: logo_size, crop:'center', scale: 2 }}" title="{{ logo_slogan }}" alt="{{ shop.name }}" style="max-width: {{ section.settings.logo_width }}px">
                          <span class="logo_slogan">{{ logo_slogan }}</span>
                        </a>
                      {% else %}
                        <a id="id-logo" class="header_logo" href="{{ shop.url }}">{{ shop.name }} <span class="logo_slogan">{{ logo_slogan }}</span></a>
                      {% endif %}

                  {% endcase %}
                  {% if template.name == 'index' %}
                    </h1>
                  {% else %}
                    </div>
                  {% endif %}
