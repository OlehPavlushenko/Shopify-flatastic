{% javascript %}
(function($) {
  var mobFlag = 0;
  var searchFlag = 0;
  headerToggle = function() {
    if ( $(window).width() > 992 ) {

      $('.header-row-1').removeClass('row_mobile').addClass('row_desktop');

      $('.header-row-1 .wrapper, #header-close').removeClass('on');

      $('html, body').css('overflow', 'auto');

      mobFlag = 0;   
    }
    else {
      $('.header-row-1 .wrapper, #header-close').hide();

      $('.header-row-1').removeClass('row_desktop').addClass('row_mobile');

      if ( mobFlag == 0 ) {
        headerMobile();
        mobFlag = 1;
      };
    };
  };

  searchToggle = function() {
    if ( $(window).width() > 992 ) {

      $('#SearchModal').removeClass('row_mobile').addClass('row_desktop');

      $('#SearchModal .wrappers, #search-close').removeClass('on');

      $('html, body').css('overflow', 'auto');

      searchFlag = 0;   
    }
    else {
       $('#SearchModal .wrappers, #search-close').hide();

      $('#SearchModal').removeClass('row_desktop').addClass('row_mobile');

      if ( searchFlag == 0 ) {
        searchMobile();
        searchFlag = 1;
      };
    };
  };

  headerMobile = function() {
    $('#header-toggle').on('click', function(){

      $('.header-row-1 .wrapper, #header-close').show().addClass('on');

      $('html, body').css({'overflow': 'hidden', 'position':'relative', 'top': '0', 'left': '0', 'right': '0'});
      $('#shopify-section-header').css({'z-index': '12', 'position':'relative'});

    });

    $('#header-close').on('click', function() {

      $('.header-row-1 .wrapper, #header-close').removeClass('on');

      $('html, body').css({'overflow': 'auto', 'position':'static'});
      $('#shopify-section-header').removeAttr('style');
    });

  };

  searchMobile = function() {

    $('#shopify-section-header #search-toggle').on('click', function(){
      $('#SearchModal .wrappers, #search-close').show().addClass('on');

      $('html, body').css({'overflow': 'hidden', 'position':'relative', 'top': '0', 'left': '0', 'right': '0'});
      $('#SearchModal').css({'z-index': '12', 'position':'relative'});

    });

    $('#search-close').on('click', function() { 

      $('#SearchModal .wrappers, #search-close').removeClass('on');

      $('html, body').css({'overflow': 'auto', 'position':'static'});
      $('#SearchModal').removeAttr('style');
    });
  };

  $(window).on('load resize', function() {
    headerToggle();
    searchToggle();
  });

  $(document).on('shopify:section:load', '#shopify-section-header', function() {
    headerToggle();
  });
  $(document).ready(function() {
    searchToggle();
  });
})(jQuery); 
