<!-- snippets/featured-blog.liquid -->
{% if section.settings.blog_show_author or section.settings.blog_show_date %}
  <div class="featured-blog-meta">
    {% if section.settings.blog_show_author %}
      <span class="featured-blog__author">
        {{ article.author }}
      </span>
    {% endif %}
    {% if section.settings.blog_show_date %}
      <div class="featured-blog-date">
        <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}" class="date">{{ article.published_at | date: format: 'month_day_year' }}</time>
      </div>
    {% endif %}
  </div>
{% endif %}
<h3 class="title-blog{% if section.settings.post_limit == 1 and section.settings.blog_show_image == false %} title--one-post{% endif %}">
  <a class="article-heading-link" href="{{ article.url }}">{{ article.title }}</a>
</h3>
{% if section.settings.blog_show_excerpt %}
  <div class="rte-indented-images">
    {{ article.excerpt_or_content | strip_html | truncatewords: section.settings.worts_limit }}
  </div>
{% endif %}
<div class="readmore">
  <a href="{{ article.url }}" class="text-link">{{ 'blogs.article.read_more' | t }} <span class="icon icon-arrow-right" aria-hidden="true"></span></a>
</div>